
<div class="row">
  <% @products.each do |product| %>
  <div class="col-xs-6 col-md-3">
    <div class="card-index">
    <%= link_to product_path(product) do %>
      <% if product.photos.present? %>
        <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbanail card-img-top-index")%>
      <% else %>
        <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail card-img-top-index")%>
      <% end %>
    <% end %>
    <div class="card-block-index">
      <h4 class="card-title-index"><%= product.title %></h4>
      <div class="meta">
        <% product.changjings.each do |p| %>
        <span class="label label-default">
          <%= p.name %>
        </span>
        <% end %>
      </div>
      <div class="card-text-index">
        简短介绍
      </div>

    </div>
    <div class="card-footer-index">
      <span class="float-right">¥ <%= product.price %></span>
      <span><i class=""></i>加入点击率</span>
    </div>

    </div>
  </div>
  <% end %>
</div>
