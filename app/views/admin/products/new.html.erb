<h2>新增商品</h2>
<%= simple_form_for [:admin, @product] do |f| %>


<div class="group">
  <%= f.input :title %>
</div>
<div class="group">
  <%= f.input :description %>
</div>
<div class="group">
  <%= f.input :youku %>
</div>
<div class="group">
  <%= f.input :changjing_ids,label:'分类', as: :check_boxes, collection: @changjings.map{|x| [x.name,x.id]}  %>
</div>
<div class="group">
  <%= f.input :price %>
</div>
<div class="group">

  <%= f.label :avatar %><br>
  <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]"%>
</div>
<%= f.submit "创建新品", data:{disable_with: "Submitting..."}%>
<% end %>
