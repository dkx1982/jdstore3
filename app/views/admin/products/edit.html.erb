<h2>商品修改</h2>
<%= simple_form_for [:admin, @product] do |f| %>
<div class="group">
  <%= f.input :title %>
</div>
<div class="group">
  <%= f.input :description%>
</div>
<div class="group">
  <%= f.input :youku %>
</div>
<div class="group">
  <%= f.input :changjing_id,label:'使用场景' ,collection:@changjings.all.map{|x| [x.name, x.id]}, as: :select %>
</div>
<div class="group">
  <%= f.input :price %>
</div>
<% if @product.photos.present? %>
<span>目前商品图</span><br>
<%  @product.photos.each do |p| %>
<%= image_tag(p.avatar.thumb.url) %><br>
<% end %>
<% end %>
<div class="group">
  <%= f.label :avatar %><br>
  <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]"%>
</div>
<%= f.submit "修改完毕", data:{disable_with: "Submitting..."}%>
<% end %>
